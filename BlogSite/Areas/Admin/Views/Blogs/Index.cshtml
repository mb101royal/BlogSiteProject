@model IEnumerable<BlogDetailsViewModel>
@{
    ViewData["Title"] = "Index";
}

@section styles{
    <style>
        img{
            width: 100%;
        }
    </style>
}

<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <br />
            <h1 class="h3 mb-4 text-gray-800">Blog Details Page</h1>

            <div class="d-block p-2 text-white">
                <a class="btn btn-primary" asp-action="Create" asp-controller="Blogs">Create Blog</a>
            </div>
            <br />
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>CreatedAt</th>
                        <th>Text</th>
                        <th>Creator</th>
                        <td colspan="2">Action</td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <img src="~/images/@item.ImageUrl">
                                </td>
                                <td>@item.Title</td>
                                <td>@item.CreatedAt</td>
                                <td>@item.Text</td>
                                <td>@item.Creator</td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-action="Update" asp-controller="Blogs" asp-route-id="@item.Id">Update</a>
                                </td>
                                <td>
                                    <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Blogs" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">No data</td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
