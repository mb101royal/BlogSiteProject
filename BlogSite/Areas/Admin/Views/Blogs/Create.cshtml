@model BlogCreateViewModel
@{
    ViewData["Title"] = "Create";
}

<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">
            <br />
            <form class="form" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <input class="form-control" placeholder="Title" asp-for="Title">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Text" asp-for="Text">
                    <span class="text-danger" asp-validation-for="Text"></span>
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Creator" asp-for="Creator">
                    <span class="text-danger" asp-validation-for="Creator"></span>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <div class="custom-file">
                            <input asp-for="ImageFile" class="form-control custom-file-input" />
                            <label class="custom-file-label">Choose File...</label>
                            <span class="text-danger" asp-validation-for="ImageFile"></span>
                        </div>
                    </div>
                </div>

                <div asp-validation-summary="All"></div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>
